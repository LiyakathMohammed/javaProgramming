import java.util.Scanner;

public class Stars {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter A Number: ");
        int n = sc.nextInt();

        int 	star = 1;
        while (n > 0) {
            for (int j = 1; j <= star; j++) {
                System.out.print("*");
            }
            System.out.println();
            star++;
            n--;
        }

        sc.close();
    }
